<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginVertical="@dimen/margin_small"
    android:background="@color/white"
    android:foreground="?selectableItemBackground"
    android:paddingHorizontal="@dimen/margin_standard"
    android:paddingVertical="@dimen/margin_standard"
    android:layout_marginHorizontal="@dimen/margin_standard"
    app:cardCornerRadius="@dimen/rd_standard"
    app:cardElevation="@dimen/margin_small"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        />

    <TextView
        android:id="@+id/tvWord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="book"
        android:textStyle="bold"
        android:fontFamily="sans-serif-condensed-medium"
        android:layout_marginStart="@dimen/margin_standard"
        android:layout_gravity="center_vertical"
        android:textColor="@color/text_color"
        android:textSize="16sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/text_color"
        android:layout_gravity="bottom"
        />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/btnSelect"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_gravity="end|center_vertical"
        android:layout_marginEnd="@dimen/margin_standard"
        android:background="@drawable/bg_btn_select"
        android:src="@drawable/star_true"
        android:padding="@dimen/padding_small"
        />

</androidx.cardview.widget.CardView>